<!-- view_activity_item.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/capitaViewLightBlue"
    android:clickable="false"
    android:padding="10dp">



    <TextView
        android:id="@+id/companyNameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        android:text="Company Name" />

    <TableLayout
        android:layout_marginTop="5dp"
        android:background="@color/capitaViewLightBlue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:stretchColumns="*">

        <TableRow
            android:background="@color/capitaViewLightBlue"
            android:layout_margin="1dp">
            <TextView
                android:id="@+id/dateView"
                android:textColor="@color/white"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Stocks bought on: " />

        </TableRow>

        <TableRow
            android:background="@color/capitaViewLightBlue"
            android:layout_margin="1dp"
            >
    <TextView
        android:id="@+id/industryView"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Industry: " />

    <TextView
        android:id="@+id/amountView"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Amount: " />

    <TextView
        android:id="@+id/totalPriceView"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Total Price: " />
        </TableRow>

    </TableLayout>

    <!-- Market details -->
    <TableLayout
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:stretchColumns="*">
        <TableRow
            android:background="@color/capitaViewLightBlue"
            android:layout_margin="1dp"
            >
            <TextView
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Open" />

            <TextView
                android:textStyle="bold"
                android:layout_width="0dp"
                android:textColor="@color/black"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Low" />

            <TextView
                android:textStyle="bold"
                android:layout_width="0dp"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="High" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="Vol"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Close" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:gravity="center_horizontal"
                android:textStyle="bold"
                android:text="Price" />

            <TextView
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_span="2"
                android:text="% Change" />
        </TableRow>

        <TableRow
            android:padding="2dp"
            >

            <TextView
                android:id="@+id/openValueTextView"
                android:gravity="center_horizontal"
                android:layout_width="0dp"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="11sp"
                android:text="Open Value" />

            <TextView
                android:id="@+id/lowValueTextView"
                android:gravity="center_horizontal"
                android:layout_width="0dp"
                android:textSize="11sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:text="Low Value" />

            <TextView
                android:id="@+id/highValueTextView"
                android:layout_width="0dp"
                android:textSize="11sp"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:text="High Value" />

            <TextView
                android:id="@+id/volumeTextView"
                android:gravity="center_horizontal"
                android:layout_width="0dp"
                android:textSize="11sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:text="Volume" />

            <TextView
                android:id="@+id/closeValueTextView"
                android:gravity="center_horizontal"
                android:layout_width="0dp"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="11sp"
                android:text="Close Value" />

            <TextView
                android:id="@+id/PriceView"
                android:gravity="center_horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="11sp"
                android:textColor="@color/white"
                android:text="Price" />

            <TextView
                android:id="@+id/percentageChangeTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_span="2"
                android:textSize="11sp"
                android:textColor="@color/white"
                android:gravity="center_horizontal"
                android:text="Change" />
        </TableRow>
    </TableLayout>
</LinearLayout>
